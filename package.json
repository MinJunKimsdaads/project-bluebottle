{
  "name": "bluebottle-project",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "public/electron.js",
  "description": "주식 데이트레이딩 대시보드",
  "author": "KMJ",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "backend-start": "nodemon server/index.js",
    "electron-dev": "electron ./public/electron.js",
    "electron-build": "electron-builder --win"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "d3": "^7.9.0",
    "express": "^5.2.1",
    "iconv-lite": "^0.7.1",
    "nodemon": "^3.1.11",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.2.4"
  },
  "build": {
    "publish": null,
    "icon": "public/favicon.ico",
    "appId": "com.developkmj.Project_BlueBottle",
    "productName": "Project_BlueBottle",
    "artifactName": "Project_BlueBottle.${ext}",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/",
      "public/**/*",
      "node_modules/",
      "package.json",
      "server/"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
